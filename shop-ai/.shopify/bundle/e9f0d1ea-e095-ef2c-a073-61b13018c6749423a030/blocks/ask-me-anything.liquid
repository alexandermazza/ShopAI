<script>
  document.addEventListener('DOMContentLoaded', () => {
    // Wait for a short period to allow review widgets to load
    setTimeout(() => {
      // Define selectors for different review apps
      const reviewSelectors = [
        '.jdgm-rev__body', // Judge.me
        '.loox-review-content', // Loox
        '.yotpo-review' // Yotpo
      ];

      let reviews = [];

      // Check for each review selector
      for (const selector of reviewSelectors) {
        const elements = document.querySelectorAll(selector);
        if (elements.length > 0) {
          reviews = Array.from(elements).slice(0, 3).map(el => el.innerText);
          break; // Stop checking once we find reviews
        }
      }

      // Pass the reviews to the AI input
      if (reviews.length > 0) {
        console.log("Review snippets:", reviews);
